<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/background2"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/CardAddLayout"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/card1"
                android:layout_weight="1"
                android:src="@drawable/black1"
                android:maxHeight="70dp"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true">
            </ImageButton>

            <ImageButton
                android:id="@+id/card2"
                android:layout_weight="1"
                android:src="@drawable/black2"
                android:maxHeight="70dp"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true">
            </ImageButton>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/card3"
                android:layout_weight="1"
                android:src="@drawable/black3"
                android:maxHeight="70dp"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true">
            </ImageButton>

            <ImageButton
                android:id="@+id/card4"
                android:layout_weight="1"
                android:src="@drawable/black4"
                android:maxHeight="70dp"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true">
            </ImageButton>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/card5"
                android:layout_weight="1"
                android:src="@drawable/black5"
                android:maxHeight="70dp"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true">
            </ImageButton>

            <ImageButton
                android:id="@+id/card6"
                android:layout_weight="1"
                android:src="@drawable/black6"
                android:maxHeight="70dp"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true">
            </ImageButton>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/card7"
                android:layout_weight="1"
                android:src="@drawable/black7"
                android:maxHeight="70dp"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true">
            </ImageButton>

            <ImageButton
                android:id="@+id/card8"
                android:layout_weight="1"
                android:src="@drawable/black8"
                android:maxHeight="70dp"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true">
            </ImageButton>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/card9"
                android:layout_weight="1"
                android:src="@drawable/black9"
                android:maxHeight="70dp"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true">
            </ImageButton>

            <ImageButton
                android:id="@+id/card10"
                android:layout_weight="1"
                android:src="@drawable/black10"
                android:maxHeight="70dp"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true">
            </ImageButton>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/card11"
                android:layout_weight="1"
                android:src="@drawable/black11"
                android:maxHeight="70dp"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true">
            </ImageButton>

            <ImageButton
                android:id="@+id/card12"
                android:layout_weight="1"
                android:src="@drawable/black12"
                android:maxHeight="70dp"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true">
            </ImageButton>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/card13"
                android:layout_weight="1"
                android:src="@drawable/black13"
                android:maxHeight="70dp"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true">
            </ImageButton>

            <ImageButton
                android:id="@+id/cardJ"
                android:layout_weight="1"
                android:src="@drawable/joker_black"
                android:maxHeight="70dp"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true">
            </ImageButton>
        </TableRow>

        <ImageButton
            android:background="@android:color/transparent"
            android:id="@+id/color"
            android:src="@drawable/palette"
            android:maxHeight="50dp"
            android:padding="0sp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >
        </ImageButton>

        <ImageButton
            android:id="@+id/field"
            android:background="@android:color/transparent"
            android:src="@drawable/common"
            android:maxHeight="50dp"
            android:padding="0sp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            >
        </ImageButton>

    </TableLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CardAddLayout"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TableLayout
                android:paddingHorizontal="50dp"
                android:shrinkColumns="*"
                android:layout_weight="4"
                android:id="@+id/CommonCardLayout"
                android:layout_gravity="center"
                android:layout_width="500dp"
                android:layout_height="20dp">


            </TableLayout>

            <TableLayout
                android:background="@drawable/wood"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_weight="1"
                android:id="@+id/MyCardLayout"
                android:shrinkColumns="*"
                android:layout_width="450dp"
                android:layout_height="100dp">

                <TableRow
                    android:paddingHorizontal="10dp"
                    android:id="@+id/MyCardRow1"
                    android:layout_marginTop="54dp"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="left"
                    android:layout_weight="1">
                </TableRow>

                <TableRow
                    android:paddingHorizontal="10dp"
                    android:id="@+id/MyCardRow2"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="13dp"
                    android:gravity="left"
                    android:layout_weight="1">
                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/reset"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:lottie_fileName="refresh2.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                android:padding="0sp"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="70dp"/>

            <com.airbnb.lottie.LottieAnimationView
                app:lottie_fileName="scan2.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                android:layout_marginVertical="20dp"
                android:id="@+id/solve"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="0sp"
                android:layout_width="100dp"
                android:layout_height="70dp"/>


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/state"
                app:lottie_fileName="search.json"
                app:lottie_loop="true"
                android:padding="0sp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="40dp"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="70dp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>